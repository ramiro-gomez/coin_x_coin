{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-tabs": ["error", { "allowIndentationTabs": true }],
        "indent": ["error", "tab"],
        "no-console": "off",
        "no-iterator": "off",
        "no-restricted-syntax": "off",
        "import/prefer-default-export": "off",
        "import/extensions": "off",
        "guard-for-in": "off",
        "no-param-reassign": "off"
    }
}
